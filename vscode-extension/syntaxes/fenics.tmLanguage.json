{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Fenics",
  "scopeName": "source.fenics",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#storage-types"
    },
    {
      "include": "#storage-modifiers"
    },
    {
      "include": "#functions"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#constants"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#ephemeral-variables"
    },
    {
      "include": "#builtin-functions"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.fenics",
          "match": "//.*$"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.fenics",
          "match": "\\b(if|else|for|while|loop|return|try|catch|then|otherwise|in|block|lib|import|as)\\b"
        },
        {
          "name": "keyword.operator.logical.fenics",
          "match": "\\b(and|or|not|is)\\b"
        }
      ]
    },
    "storage-modifiers": {
      "patterns": [
        {
          "name": "storage.modifier.fenics",
          "match": "\\b(const|mut|global|fn)\\b"
        }
      ]
    },
    "storage-types": {
      "patterns": [
        {
          "name": "storage.type.fenics",
          "match": "\\b(Int|Float|String|Boolean|Bool|Array|Object|Regex|List|Pairs)\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "meta.function.fenics",
          "match": "\\b(fn)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
          "captures": {
            "1": {
              "name": "storage.modifier.fenics"
            },
            "2": {
              "name": "entity.name.function.fenics"
            }
          }
        },
        {
          "name": "entity.name.function.fenics",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()"
        }
      ]
    },
    "builtin-functions": {
      "patterns": [
        {
          "name": "support.function.builtin.fenics",
          "match": "\\b(print|input|len|type|str|int|sort|reverse|has|keys|first|last|split|length)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.fenics",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.fenics",
              "match": "\\\\."
            },
            {
              "name": "meta.embedded.line.fenics",
              "begin": "#\\{",
              "end": "\\}",
              "patterns": [
                {
                  "include": "$self"
                }
              ],
              "beginCaptures": {
                "0": {
                  "name": "punctuation.section.embedded.begin.fenics"
                }
              },
              "endCaptures": {
                "0": {
                  "name": "punctuation.section.embedded.end.fenics"
                }
              }
            }
          ]
        },
        {
          "name": "string.regexp.fenics",
          "begin": "(?<=[=(:,\\[]|^)\\s*/(?![/*])",
          "end": "/[gimsuvy]*",
          "patterns": [
            {
              "name": "constant.character.escape.fenics",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.fenics",
          "match": "\\b\\d+\\.\\d+\\b"
        },
        {
          "name": "constant.numeric.integer.fenics",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.boolean.fenics",
          "match": "\\b(true|false)\\b"
        },
        {
          "name": "constant.language.null.fenics",
          "match": "\\b(null|undefined|nil|NaN)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.assignment.fenics",
          "match": "(\\+:|\\-:|\\*:|/:|%:|:)"
        },
        {
          "name": "keyword.operator.comparison.fenics",
          "match": "(===|==|!=|!==|<=|>=|<|>|~|!~)"
        },
        {
          "name": "keyword.operator.arithmetic.fenics",
          "match": "(\\+\\+|\\-\\-|\\+|\\-|\\*\\*|\\*|/|%|\\^)"
        },
        {
          "name": "keyword.operator.ternary.fenics",
          "match": "(\\?|:)"
        }
      ]
    },
    "ephemeral-variables": {
      "patterns": [
        {
          "name": "variable.other.ephemeral.fenics",
          "match": "#([a-zA-Z_][a-zA-Z0-9_]*|\\d+)"
        }
      ]
    }
  }
}
